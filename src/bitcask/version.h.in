// clang-format off

#pragma once

#include "bitcask/api.h"

#define BITCASK_VERSION_MAJOR ${${PROJECT_NAME}_VERSION_MAJOR}
#define BITCASK_VERSION_MINOR ${${PROJECT_NAME}_VERSION_MINOR}
#define BITCASK_VERSION_PATCH ${${PROJECT_NAME}_VERSION_PATCH}

// Library version number
// MMmmpppp
// ->   MM = major
// ->   mm = minor
// -> pppp = patch
#define BITCASK_VERSION_NUMBER ${${PROJECT_NAME}_VERSION_NUMBER}

// clang-format on
namespace bitcask {

class BITCASK_EXPORT version
{
	static BITCASK_EXPORT int number(); // returns BITCASK_VERSION_NUMBER

	static BITCASK_EXPORT int major(); // returns BITCASK_VERSION_MAJOR
	static BITCASK_EXPORT int minor(); // returns BITCASK_VERSION_MINOR
	static BITCASK_EXPORT int patch(); // returns BITCASK_VERSION_PATCH

	static BITCASK_EXPORT void check(); // asserts that Version::number() == BITCASK_VERSION_NUMBER
};

} // namespace bitcask
